   <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        app:wlv_borderColor="@color/colorPrimaryDarkC"
        app:wlv_borderWidth="5dp"
        app:wlv_progressValue="40"
        app:wlv_shapeType="rectangle" // circle for circular view
        app:wlv_titleCenter="Water Level"
        app:wlv_titleCenterColor="@android:color/white"
        app:wlv_titleCenterSize="50sp"
        app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleCenterStrokeWidth="5dp"
        app:wlv_triangle_direction="north"
        app:wlv_waveAmplitude="70"
        app:wlv_waveColor="@color/colorPrimaryC" />
